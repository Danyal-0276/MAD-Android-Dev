<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_ready_to_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to Speak"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_new_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Word"
        android:layout_toEndOf="@id/btn_ready_to_speak"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_show_the_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show the Word"
        android:layout_toEndOf="@id/btn_new_word"
        android:layout_alignTop="@id/btn_ready_to_speak"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txt_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ready_to_speak"
        android:text="5 Correct"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_spanish_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amigo"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_english_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friend"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:layout_below="@id/txt_spanish_word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_people"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_above="@+id/spinner_people"
        android:text="People"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner_people"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/btn_dropdown"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/btn_not_marked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Marked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
